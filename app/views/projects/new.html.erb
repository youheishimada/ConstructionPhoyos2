<div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center bg-light">
  <div class="card shadow rounded-4 p-4 w-100" style="max-width: 400px;">
    <h2 class="mb-4 text-center fw-bold" style="letter-spacing: 1px;">プロジェクト新規作成</h2>

    <%# ▼ バリデーションエラー表示（Bootstrap風） %>
    <% if @project.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@project.errors.count, "件のエラー") %>があります:</h4>
        <ul class="mb-0">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @project, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :title, "工事件名", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :site_name, "現場名", class: "form-label" %>
        <%= f.text_field :site_name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :start_date, "開始日", class: "form-label" %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :end_date, "終了日", class: "form-label" %>
        <%= f.date_field :end_date, class: "form-control" %>
      </div>
      <div class="d-grid gap-2">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
      <div class="mt-2 d-grid">
        <%= link_to "一覧へ戻る", projects_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>